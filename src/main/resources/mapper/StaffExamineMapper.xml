<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jjjt.attendance.dao.StaffExamineDao">
    <!--增加员工审批关联表-->
    <insert id="InsertStaffExamine" parameterType="java.util.Map">
        INSERT INTO `attendance`.`staff_examine` (`staff_id`, `examine_id`, `uptime`) VALUES (#{staff_idT},#{examine_id},#{uptime});
    </insert>

    <!--根据staff_id查询审批信息-->
    <select id="FindExamineId" parameterType="java.util.Map" resultType="int">
        <bind name="page" value="pageSize*(pageNo-1)"></bind>
        SELECT `examine_id` FROM `attendance`.`staff_examine`
        WHERE `staff_id`=#{staff_id}
        order by `uptime` DESC
        limit #{page},#{pageSize}
    </select>

    <!--统计总数-->
    <select id="Total" parameterType="java.util.Map" resultType="long">
        SELECT COUNT(*) FROM `attendance`.`staff_examine` WHERE `staff_id`=#{staff_id}
    </select>
</mapper>